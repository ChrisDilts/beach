
{
"AWSTemplateFormatVersion": "2010-09-09",
    "Description": "",
    "Metadata": {

    },
    "Parameters": {
        "VPCcidr" : {
            "Description" : "CIDR range for the VPC",
            "Type" : "String",
            "Default" : "10.0.0.0/26"
        },
        "VPCname" : {
            "Description" : "Name of the VPC",
            "Type" : "String",
            "Default" : "MyVPC"
        }
    },
    "Mappings": {

    },
    "Conditions": {

    },
    "Resources": {
        
        "VPC": {
          "Type": "AWS::EC2::VPC",
          "Properties": {
            "CidrBlock": "10.0.0.0/16",
            "EnableDnsSupport" : "true",
            "EnableDnsHostnames" : "true",
            "Tags": [{"Key" : "Name" , "Value" : {"Ref" : "VPCname"}}]
          }
        },
        "VPCpublicSubnet1" : {
            "Type" : "AWS::EC2::Subnet",
            "Properties" : {
                "VpcId" : {"Ref" : "VPCname"},
                "CidrBlock" : "10.0.1.0/26",
                "Tags" : [{"Key" : "Name", "Value" : {"Fn::Join" : ["", [ {"Ref" : "VPCname"},"PubSubnet1"]]}}]
            }
        },
        "VPCpublicSubnet2" : {
            "Type" : "AWS::EC2::Subnet",
            "Properties" : {
                "VpcId" : {"Ref" : "VPCname"},
                "CidrBlock" : "10.0.2.0/26",
                "Tags" : [{"Key" : "Name", "Value" : {"Fn::Join" : ["",[ {"Ref" : "VPCname"},"PubSubnet2"]]}}]
            }
        },
        "VPCprivateSubnet1" : {
            "Type" : "AWS::EC2::Subnet",
            "Properties" : {
                "VpcId" : {"Ref" : "VPCname"},
                "CidrBlock" : "10.0.3.0/26",
                "Tags" : [{"Key" : "Name", "Value" : {"Fn::Join" : ["", [ {"Ref" : "VPCname"},"PrivSubnet1"]]}}]
            }
        },
        "VPCprivateSubnet2" : {
            "Type" : "AWS::EC2::Subnet",
            "Properties" : {
                "VpcId" : {"Ref" : "VPCname"},
                "CidrBlock" : "10.0.4.0/26",
                "Tags" : [{"Key" : "Name", "Value" : {"Fn::Join" : ["", [ {"Ref" : "VPCname"},"PrivSubnet2"]]}}]
            }
        },
        "IGW" : {
            "Type" : "AWS::EC2::InternetGateway"
        },
        "GatewayToInternet" : {
            "Type" : "AWS::EC2::VPCGatewayAttachment",
            "Properties" : {
                "VpcId" : {"Ref" : "VPC"},
                "InternetGatewayId" : {"Ref" : "IGW"}
            }
        },
        "PublicRouteTable" : {
            "Type" : "AWS::EC2::RouteTable",
            "Properties" : {
                "VpcId" : {"Ref" : "VPC"}
            }
        },
        "PublicRoute" : {
            "Type" : "AWS::EC2::Route",
            "DependsOn" : "GatewayToInternet",
            "Properties" : {
                "RouteTableId" : {"Ref" : "PublicRouteTable"},
                "DestinationCidrBlock" : "0.0.0.0/0",
                "GatewayId" : {"Ref" : "IGW"}
            }
        },
        "PubSubnetRouteTableAssn" : {
            "Type" : "AWS::EC2::SubnetRouteTableAssociation",
            "Properties" : {
                "SubnetId" : {"Ref" : "VPCpubSubnet1"}
            }
        },
        "PubSubnetRouteTableAssn2" : {
            "Type" : "AWS::EC2::SubnetRouteTableAssociation",
            "Properties" : {
                "SubnetId" : {"Ref" : "VPCpubSubnet2"}
            }
        }
    },
    "Outputs": {
        "VpcId" : {
            "Description" : "ID of the VPC",
            "Value" : {"Ref" : "VPC"}
        },
        "PubSubnet1" : {
            "Description" : "Public Subnet 1",
            "Value" : {"Ref" : "VPCpubSubnet1"}
        },
        "PubSubnet2" : {
            "Description" : "Public Subnet 2",
            "Value" : {"Ref" : "VPCpubSubnet2"}
        },
        "PrivSubnet1" : {
            "Description" : "Private Subnet 1",
            "Value" : {"Ref" : "VPCprivSubnet1"}
        },
        "PrivSubnet2" : {
            "Description" : "Private Subnet 2",
            "Value" : {"Ref" : "VPCprivSubnet2"}
        }
    }
}